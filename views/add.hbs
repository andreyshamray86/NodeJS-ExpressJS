<h1>Add a course</h1>

<form action="/add" method="POST">
    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" required>
        <label for="title">Course title</label>
        <span class="helper-text" data-error="Enter the course title"></span>
    </div>

    <div class="input-field">
        <input id="price" name="price" type="number" class="validate" required min="1">
        <label for="price">Course price</label>
        <span class="helper-text" data-error="Enter the price"></span>
    </div>

    <div class="input-field">
        <input id="img" name="img" type="text" class="validate" required>
        <label for="img">URL course image</label>
        <span class="helper-text" data-error="Enter the course image url"></span>
    </div>

    <button class="btn btn-primary">Add a course</button>
</form>